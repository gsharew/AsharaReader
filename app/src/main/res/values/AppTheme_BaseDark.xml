<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme.BaseDark" parent="Theme.MaterialComponents.NoActionBar.Bridge">
		<item name="isLightTheme">false</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">?colorPrimary</item>

		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorAccentTransparent">@color/colorAccent_transparent</item>

		<item name="colorPrimary">@color/color_20</item>
		<item name="colorPrimaryTransparent">@color/color_20_transparent</item>
		<item name="colorPrimaryDark">@color/color_30</item>
		<item name="colorOnPrimary">@color/color_ee</item>
		<item name="colorSecondary">@color/color_24</item>
		<item name="colorOnSecondary">?colorOnPrimary</item>
		<item name="colorSurface">@color/color_18</item>
		<item name="colorOnSurface">?colorOnPrimary</item>
		<item name="colorOnBackground">?colorOnPrimary</item>

		<item name="android:colorBackground">@color/color_18</item>
		<item name="android:colorEdgeEffect">?colorAccent</item>

		<item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
		<item name="buttonStyle">@style/myButtonStyle</item>
		<item name="myReaderTextStyle">@style/myReaderTextStyle.BaseDark</item>
		<item name="tabStyle">@style/myTabLayout</item>
		<item name="appBarLayoutStyle">@style/myAppBarLayoutStyle</item>

		<item name="noneStateTint">@color/color_dd</item>
		<item name="positiveStateTint">@color/dark_green</item>
		<item name="negativeStateTint">@color/dark_red</item>
		<item name="myColorControlNormalPale">@color/color_66</item>

		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>

		<item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>

		<item name="bottomSheetDialogTheme">@style/myBottomSheetDialogStyle.BaseDark</item>
	</style>


	<style name="myBottomSheetStyle.BaseDark">
		<!-- Using tint instead of background color (works for unknown reasons) -->
		<item name="backgroundTint">@color/color_18</item>
	</style>

	<style name="myBottomSheetDialogStyle.BaseDark">
		<item name="bottomSheetStyle">@style/myBottomSheetStyle.BaseDark</item>
	</style>

	<style name="myReaderTextStyle.BaseDark">
		<item name="android:textColor">@color/color_dd</item>
	</style>

</resources>